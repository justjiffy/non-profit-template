<div id="event" class="main_narrow">
	
	<%= link_to ("<button>Add New Event</button>").html_safe, '/admin/new_event' %>

</div>
  <% @events.each do |f| %>
       <li><%= f.date %> | 
       	<%= link_to truncate(f.title, :length => 20, :separator => ' '), edit_event_path(f) %> | 
        <%= truncate(f.body, :length => 50, :separator => " ") %> | 
        (<%= f.created_at %> by <%= f.user.name %>)

        <% end %>
</div>